<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">16sp</item> <!-- menu item text size-->
        <item name="android:layout_marginTop">5dp</item>
        <item name="listPreferredItemHeightSmall">32dp</item>
    </style>

    <style name="cust_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_title_style</item>
    </style>

    <style name="gold" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="silver" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">@color/silver</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cu" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">@color/cu</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_title_style" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:background">#512da8</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
